<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="24dp"
    tools:layout_editor_absoluteY="63dp">

    <TextView
        android:id="@+id/a_detail_movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a_detail_text_movie"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_image" />

    <TextView
        android:id="@+id/a_detail_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a_detail_text_address"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_type" />

    <TextView
        android:id="@+id/a_detail_text_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Movie: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_image" />

    <TextView
        android:id="@+id/a_detail_text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Address: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="@+id/a_detail_text_movie"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_text_type" />

    <TextView
        android:id="@+id/a_detail_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a_detail_text_director"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_movie" />

    <TextView
        android:id="@+id/a_detail_text_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Director: "
        app:layout_constraintStart_toStartOf="@+id/a_detail_text_movie"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_text_movie" />

    <TextView
        android:id="@+id/a_detail_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        app:layout_constraintEnd_toStartOf="@+id/a_detail_id"
        app:layout_constraintTop_toTopOf="@+id/a_detail_id" />

    <TextView
        android:id="@+id/a_detail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/a_detail_producer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a_detail_text_producer"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_date" />

    <TextView
        android:id="@+id/a_detail_text_producer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producer: "
        app:layout_constraintStart_toStartOf="@+id/a_detail_text_date"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_text_date" />

    <TextView
        android:id="@+id/a_detail_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Released: "
        app:layout_constraintStart_toStartOf="@+id/a_detail_text_director"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_text_director" />

    <TextView
        android:id="@+id/a_detail_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a_detail_text_date"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_director" />

    <TextView
        android:id="@+id/a_detail_text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: "
        app:layout_constraintStart_toStartOf="@+id/a_detail_text_producer"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_text_producer" />

    <TextView
        android:id="@+id/a_detail_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a_detail_text_type"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_producer" />

    <TextView
        android:id="@+id/a_detail_text_postalcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Postal code: "
        app:layout_constraintStart_toStartOf="@+id/a_detail_text_address"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_text_address" />

    <TextView
        android:id="@+id/a_detail_postalcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a_detail_text_postalcode"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_address" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/a_detail_btn_backarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:clickable="true"
        app:backgroundTint="#6200ED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_text_postalcode"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/a_detail_image"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_id"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>