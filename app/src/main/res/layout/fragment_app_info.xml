<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppInfoFragment">

    <TextView
        android:id="@+id/f_app_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App information"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/f_app_info_text_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Data origin"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_app_info_title" />

    <TextView
        android:id="@+id/f_app_info_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/f_app_info_text_url"
        app:layout_constraintTop_toBottomOf="@+id/f_app_info_text_url" />

    <TextView
        android:id="@+id/f_app_info_text_explanations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="What is all that data there for?"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/f_app_info_text_url"
        app:layout_constraintTop_toBottomOf="@+id/f_app_info_url" />

    <TextView
        android:id="@+id/f_app_info_explanations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/f_app_info_text_explanations"
        app:layout_constraintTop_toBottomOf="@+id/f_app_info_text_explanations" />

    <TextView
        android:id="@+id/f_app_info_text_licence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Librabries and licences"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/f_app_info_text_explanations"
        app:layout_constraintTop_toBottomOf="@+id/f_app_info_explanations" />

    <TextView
        android:id="@+id/f_app_info_licence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/f_app_info_text_licence"
        app:layout_constraintTop_toBottomOf="@+id/f_app_info_text_licence" />
</androidx.constraintlayout.widget.ConstraintLayout>